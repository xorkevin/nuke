{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./lib/*"]
    },
    "outDir": "dist",
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "lib/**/*.d.ts",
    "lib/**/*.module.css"
  ]
}
